{{> message}}
<div class="container mt-4">
  <h3>Suggested events for you to attend in {{destination}}:</h3>
  {{#each events}}
    <form method="POST" action="/add_event_to_itinerary">
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            {{#unless this.image === 'none'}}
              <img src="{{this.image}}" class="img-fluid rounded-start" alt="{{this.name}}">
            {{/unless}}
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">
                {{#unless this.category === 'none'}}{{this.category}} at {{/unless}}
                {{#unless this.place === 'none'}}{{this.place}}{{/unless}}
              </h6>
              {{#unless this.start === 'none' || this.end === 'none'}}
                <p class="card-text"><small>{{this.start}} to {{this.end}}</small></p>
              {{/unless}}
              {{#unless this.description === 'none'}}
                <p class="card-text">{{this.description}}</p>
              {{/unless}}
              {{#unless this.minPrice === 'none' || this.maxPrice === 'none'}}
                <p class="card-text">Price Range: ${{this.minPrice}} - ${{this.maxPrice}}</p>
              {{/unless}}
              <a href="{{this.url}}" class="btn btn-primary">Book Now</a>

              <input type="hidden" name="name" value="{{this.name}}">
              <input type="hidden" name="start" value="{{this.start}}">
              <input type="hidden" name="end" value="{{this.end}}">
              <input type="hidden" name="image" value="{{this.image}}">
              <input type="hidden" name="url" value="{{this.url}}">
              <input type="hidden" name="description" value="{{this.description}}">
              <input type="hidden" name="category" value="{{this.category}}">
              <input type="hidden" name="place" value="{{this.place}}">
              <input type="hidden" name="minPrice" value="{{this.minPrice}}">
              <input type="hidden" name="maxPrice" value="{{this.maxPrice}}">
              
              <button class="btn btn-secondary" type="submit">Add Event to Itinerary</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  {{/each}}
</div>
