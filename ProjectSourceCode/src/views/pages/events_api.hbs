{{> message}}
<div class="container mt-4">
  <h3>Suggested events for you to attend in {{destination}}:</h3>
  {{#each events}}
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="{{this.image}}" class="img-fluid rounded-start" alt="{{this.name}}">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{this.category}} at {{this.place}}</h6>
            <p class="card-text"><small>{{this.start}} to {{this.end}}</small></p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">Price Range: ${{this.minPrice}} - ${{this.maxPrice}}</p>
            <a href="{{this.url}}" class="btn btn-primary">Book Now</a>
            <button class="btn btn-secondary">Add Event to Itinerary</button>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>